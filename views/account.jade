doctype HTML
html
	head
		meta(charset="utf-8")
		meta(name="viewport" content="width=device-width initial-scale=1.0")
		title 测试结果集
		link(rel="stylesheet" type="text/css" href="css/themes/mytheme.min.css")
		link(rel="stylesheet" type="text/css" href="css/themes/jquery.mobile.icons.min.css")
		link(rel="stylesheet" type="text/css" href="css/jquery.mobile.structure-1.4.3.min.css")
		link(rel="stylesheet" type="text/css" href="css/base.css")
		link(rel="stylesheet" type="text/css" href="css/test.css")
		style.
			.clearfix:after {
				visibility: hidden;
				display: block;
				font-size: 0;
				content: " ";
				clear: both;
				height: 0;
				}
	body(class="ui-nosvg")
		div(data-role="page" data-theme="a" class='ui-page-theme-a ui-page')
			div(class="header" data-role="header") 
				a(href="javascript:;" onclick="history.back();" class="ui-btn ui-icon-back ui-btn-icon-notext ui-corner-all") back
				hi(class="ui-title" role="heading") Members
			div(class="main" data-role="main")
				div#createArea(width="100%" cellpadding="0" cellspacing="0")
					div.nameInp(contenteditable)
					div.select-level(data-max=level-1 data-value="0")
						div.num-wrap 0
						div.icon-wrap
							div.up-icon(onclick="Wgs.levelSel.edit(1 ,this);")
							div.down-icon(onclick="Wgs.levelSel.edit(-1 ,this);")
					a.createHandler(href="javascript:;") Create

				table#createdArea(width="100%" cellpadding="0" cellspacing="0")
					tr.tr-title 
						td(colspan="6" align="center") Created Members 
					tr.tr-header
						td(width="50%" align="center") NAME
						td(width="20%" align="center") LEVEL
						td(width="30%" align="center") OPERATION
					each u in users
						tr.user
							td(align="center")=u.name
							td
								div.select-level(data-max=level-1 data-value=u.level)
									div.num-wrap=u.level
									div.icon-wrap
										div.up-icon(onclick="Wgs.levelSel.edit(1 ,this);")
										div.down-icon(onclick="Wgs.levelSel.edit(-1 ,this);")
							td(align="center")
								a.updateHandler(data-id=''+u._id onclick="Wgs.account.update(this)" href="javascript:;") update
		script(src="js/jquery-1.8.3.min.js")
		script(src="js/jquery.mobile-1.3.2.min.js")
		script(src="js/tester.js")
		script(src="js/route.js")
				
		
