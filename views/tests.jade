doctype HTML5
html
	head
		title 开始测试
		meta(charset="utf-8")
		meta(name="viewport" content="width=device-width initial-scale=1.0")
		link(rel="stylesheet" type="text/css" href="css/base.css")
		link(rel="stylesheet" type="text/css" href="css/test.css")
	body
		section#testPre
			header
				h1 Manual Test
			form#form
				table
					tr
						td  Plan:
						td 
							select(name="plan")
								option(value="") 请选择测试计划
								each plan in plans
									option(value=plan.id)= plan.content
					tr
						td Tester:
						td
							input(name="tester" type="text" placeholder="您的姓名")
					tr
						td Device:
						td
							input(name="device" type='text' placeholder='手机型号')
					tr
						td System:
						td
							select(name="system")
								option(value="") 请选择测试机器的操作系统
								optgroup(label="Android 2.x")
									option(value="Android 2.1") Android 2.1
									option(value="Android 2.2") Android 2.2
									option(value="Android 2.3") Android 2.3
								optgroup(label="Android 4.x")
									option(value="Android 4.0") Android 4.0
									option(value="Android 4.1") Android 4.1
									option(value="Android 4.2") Android 4.2
									option(value="Android 4.3") Android 4.3
									option(value="Android 4.4") Android 4.4
					tr
						td
						td#warning
				button(onclick="start();return false;") Start
		section#testProcess
			a(href="javascript:;" onclick="refresh();return false;" class="refresh")
			div#descWrap
				table(id="descTable" width="100%" height="100%" cellpadding="0" cellspacing="0")
					tr(height="20px")
						td(class="pass-header header-base" valign="center")
							span.desc-title Pass
						td(class="pass-body body-base") 
					tr(height="20px")
						td(class="fail-header header-base" valign="center")
							span.desc-title Fail
						td(class="fail-body body-base") 
					tr(height="20px")
						td(class="step-header header-base" valign="center")
							span.desc-title Step
						td(class="step-body body-base")
					tr.blank
						td(width="100%" align="center") this case has no description.
					tr(height="30px")
						td &nbsp;
				div.menu(onclick="toggleDesc();return false")
			table(id="testProcessTable" width="100%" height="100%" cellpadding="0" cellspacing="0")
				tr(height="30px")
					td(width="100%" colspan=3)
						&nbsp;
				tr(height="100%")
					td(width="100%" colspan=3 style="padding: 10px;")
						iframe(src="" width="100%" height="100%" style="border:0")
				tr(height="60px")
					td(colspan=3)
						a(href="javascript:;" id="toTest" target="_blank") Click here to test in a new tab
				tr(height="40px")
					td(width="33%" align="center")
						a(class="button green" href="javascript:;" onclick="current.pass();return false;") PASS
					td(width="33%" align="center")
						a(class="button red" href="javascript:;" onclick="current.fail();return false;") FALL
					td(width="33%" align="center")
						a(class="button yellow" href="javascript:;" style="background:#bd7803" onclick="current.showNote();return false;") NOTE
		table#noteArea(cellpadding="0" cellspacing="0")
			tr
				td
					input(id="note-input" type="text")
				td(width="80px")
					a(class="button yellow" href="javascript:;" id="note-handler" onclick="current.note();return false;") 确认  
		section#testReport
			div.results
			div.controls
				a(onclick="testAgain();return false;" href="javascript:;") TestAgain
				a(onclick="saveAndGoOn();return false;" href="javascript:;") SaveAndGoOn
				//- a(onclick="showReport();return false;" href="javascript:;") Show Report
		script(src="js/zepto.min.js")
		script(src="js/test.js")
