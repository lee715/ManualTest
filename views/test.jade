doctype HTML
html
	head
		meta(charset="utf-8")
		meta(name="viewport" content="width=device-width initial-scale=1.0")
		title 测试结果集
		link(rel="stylesheet" type="text/css" href="css/themes/mytheme.min.css")
		link(rel="stylesheet" type="text/css" href="css/themes/jquery.mobile.icons.min.css")
		link(rel="stylesheet" type="text/css" href="http://code.jquery.com/mobile/1.4.3/jquery.mobile.structure-1.4.3.min.css")
		link(rel="stylesheet" type="text/css" href="css/test.css")
		style.
			.clearfix:after {
				visibility: hidden;
				display: block;
				font-size: 0;
				content: " ";
				clear: both;
				height: 0;
			}
		script(src="http://code.jquery.com/jquery-1.8.3.min.js")
	body
		div(data-role="page" data-theme="a" class='ui-page-theme-a ui-page')
			div(class="header" data-role="header") 
				a(href="javascript:;" onclick="current.back();" class="ui-btn ui-icon-back ui-btn-icon-notext ui-corner-all") back
				h1(class="ui-title" role="heading" aria-level="1") ManualTest
				a(href="javascript:;" onclick="document.getElementById('desc').style.display = 'block';return false;" class="ui-btn ui-icon-bullets ui-btn-icon-notext ui-corner-all") info
			div(class="main" id="testMain" data-role="main")
				iframe(width="100%" height="100%")
			div(class="footer" data-role="footer" class="clearfix")
				a(href="#popupNote" onclick="$('#noteTextarea')[0].value = current.getNote();" data-rel="popup" data-position-to="window" style="float:right;margin-right:10px" class="ui-btn-c ui-icon-info ui-btn ui-btn-icon-left ui-shadow ui-corner-all") NOTE
				a(onclick="current.fail();" style="float:right;margin-right:10px" href="javascript:;" class="ui-btn-b ui-icon-delete ui-btn ui-btn-icon-left ui-shadow ui-corner-all") FAIL
				a(onclick="current.pass();" style="float:right;margin-right:10px" href="javascript:;" class="ui-icon-check ui-btn ui-btn-icon-left ui-shadow ui-corner-all") PASS
			div(data-role="popup" id="popupNote" data-theme="a" class="ui-corner-all")
				form
					div(style="padding:10px 20px;")
						p(style="color: #666;") write your note here
						textarea(id="noteTextarea" name="note" rows="6" placeholder="note...")
						a(href="/test" onclick="current.note($('#noteTextarea').val());" class="ui-btn ui-corner-all ui-shadow ui-btn-c ui-btn-icon-left ui-icon-check") confirm
			div#desc
				div(data-role="header" style="border:none;border-bottom: 1px solid rgba(0,0,0,.4)")
					h1(class="ui-title" role="heading" aria-level="1") Description
					a(onclick="document.getElementById('desc').style.display = 'none';return false;" class="ui-btn ui-icon-delete ui-btn-icon-notext ui-corner-all ui-btn-b ui-btn-right") close
				div(data-role="main" style="padding:8px;background:#dfe3da;border-top:1px solid white") 
					table(id="descTable" width="100%" height="100%" cellpadding="0" cellspacing="0")
						tr(height="20px")
							td(class="pass-header header-base" valign="center")
								span.desc-title Pass
							td(class="pass-body body-base") 
						tr(height="20px")
							td(class="fail-header header-base" valign="center")
								span.desc-title Fail
							td(class="fail-body body-base") 
						tr(height="20px")
							td(class="step-header header-base" valign="center")
								span.desc-title Step
							td(class="step-body body-base")
						tr.blank
							td(width="100%" align="center") this case has no description.
		script(src="http://code.jquery.com/mobile/1.3.2/jquery.mobile-1.3.2.min.js")
		script.
			$(window).on('navigate', function(){
				console.log(arguments);
			})

