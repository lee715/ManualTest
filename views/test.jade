doctype HTML5
html
	head
		title 开始测试
		meta(charset="utf-8")
		link(rel="stylesheet" type="text/css" href="css/test.css")
	body
		section#testPre
			header
				h1 Manual Test
			form#form
				table
					tr
						td Tester:
						td
							input(name="tester" type="text" placeholder="您的姓名")
					tr
						td Device:
						td
							input(name="device" type='text' placeholder='手机型号')
					tr
						td System:
						td
							select(name="system")
								option(value="") 请选择测试机器的操作系统
								optgroup(label="Android 2.x")
									option(value="Android 2.1") Android 2.1
									option(value="Android 2.2") Android 2.2
									option(value="Android 2.3") Android 2.3
								optgroup(label="Android 4.x")
									option(value="Android 4.0") Android 4.0
									option(value="Android 4.1") Android 4.1
									option(value="Android 4.2") Android 4.2
									option(value="Android 4.3") Android 4.3
									option(value="Android 4.4") Android 4.4
					tr
						td
						td#warning
				button(onclick="start();return false;") Start
		section#testProcess
			a(href="javascript:;" onclick="refresh();return false;" class="refresh")
			table(width="100%" height="100%")
				tr(height="100%")
					td(width="100%")
						iframe(src="" width="100%" height="100%" style="border:0")
				tr(height="120px")
					td(width="100%" align="center")
						a(class="button" onclick="current.pass();return false;" style="background:green;margin:0 40px 0 40px;") PASS
						a(class="button" onclick="current.fail();return false;" style="background:red;margin-right:40px;") FALL
						a(class="button" onclick="current.fail();return false;" style="background:#bd7803") NOTE
						input#noteArea(type="text")
		section#testReport
			div.results
			div.controls
				a(onclick="testAgain();return false;" href="javascript:;") TestAgain
				a(onclick="saveAndGoOn();return false;" href="javascript:;") SaveAndGoOn
				//- a(onclick="showReport();return false;" href="javascript:;") Show Report
		script(src="js/zepto.min.js")
		script(src="js/test.js")
